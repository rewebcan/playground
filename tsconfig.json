{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",
    "lib": ["es2015", "es2016", "dom", "es2017", "es6", "es5"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}